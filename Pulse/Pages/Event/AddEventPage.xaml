<?xml version="1.0" encoding="UTF-8"?>
<local:BaseContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
                       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
                       xmlns:local="clr-namespace:Pulse;assembly=Pulse" 
                       xmlns:controls="clr-namespace:Pulse.Controls" xmlns:yummy="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView" x:Class="Pulse.AddEventPage">
    <local:BaseContentPage.Content>
        <Grid HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" BackgroundColor="{x:Static local:Constant.WhiteTextColor}">
            <Grid x:Name="grdMain" HorizontalOptions="FillAndExpand" RowSpacing="0" VerticalOptions="FillAndExpand">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <local:GradientColorStack stackOrientation="Horizontal" Grid.Row="0" StartColor="{x:Static local:Constant.LightPinkColor}" Spacing="0" EndColor="{x:Static local:Constant.DarkPinkColor}" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                    <local:GradientColorStack.Effects>
                        <local:NotchEffect />
                    </local:GradientColorStack.Effects>
                    <Grid VerticalOptions="FillAndExpand" x:Name="topStack" Margin="15,20,11,8" BackgroundColor="Transparent">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="15*"/>
                            <ColumnDefinition Width="85*"/>
                        </Grid.ColumnDefinitions>
                        <local:ExtendedButton x:Name="btnBack" Grid.Column="0" Image="{x:Static local:Constant.CrossWhiteImage}" Clicked="Cross_Clicked" BackgroundColor="Transparent" HorizontalOptions="Start" VerticalOptions="Center" BorderColor="Transparent" BorderRadius="0" />
                        <local:ExtendedLabel Text="Add New Event" FontFace="PoppinsMedium" Grid.ColumnSpan="2" VerticalOptions="Center" HorizontalOptions="CenterAndExpand" TextColor="{x:Static local:Constant.WhiteTextColor}" FontSize="15" />
                    </Grid>
                </local:GradientColorStack>
                    <StackLayout Grid.Row="1" BackgroundColor="White" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Padding="25,0,25,0">
                        <!--Screen1-->
                    <ScrollView x:Name="Screen1"  IsVisible="{Binding IsScreenFirstVisible}" VerticalScrollBarVisibility="Never">
                            <StackLayout Spacing="40" Padding="0,40,0,10">
                                <!--EVENT TITLE-->
                                <yummy:PancakeView Style="{StaticResource eventFrameStyle}">
                                    <yummy:PancakeView.Border>
                                        <yummy:Border Color="Gray" Thickness="1"/>
                                    </yummy:PancakeView.Border>
                                    <StackLayout Style="{StaticResource eventEntryStack}">
                                        <Image Source="{x:Static local:Constant.EventTitleImage}" VerticalOptions="CenterAndExpand"/>
                                        <local:BorderlessEntry Style="{StaticResource eventEntryStyle}" FontFace="PoppinsRegular" 
                                                               Placeholder="+ Event Title" x:Name="txtEventTitle" MaxLength="100" 
                                                               Text="{Binding EventTitle}"/>
                                    </StackLayout>
                                </yummy:PancakeView>

                                <!--EVENT Venue-->
                                <yummy:PancakeView Style="{StaticResource eventFrameStyle}">
                                    <yummy:PancakeView.Border>
                                        <yummy:Border Color="Gray" Thickness="1"/>
                                    </yummy:PancakeView.Border>
                                    <StackLayout Style="{StaticResource eventEntryStack}">
                                        <Image Source="{x:Static local:Constant.VenueImage}"/>
                                        <local:BorderlessEntry x:Name="editorVenue" Placeholder="+ Venue" 
                                                               Style="{StaticResource eventEntryStyle}" ReturnType="Search" 
                                                               FontFace="PoppinsRegular" Text="{Binding EventVenue}" 
                                                               MaxLength="200" TextChanged="Venue_TextChanged" />
                                        <ActivityIndicator IsVisible="{Binding AddressListLoading}" IsRunning="{Binding AddressListLoading}" Color="DarkGray" HeightRequest="25" WidthRequest="25"/>
                                        <Image x:Name="imageCross" Source="{x:Static local:Constant.SearchCloseIcon}" VerticalOptions="Center" Aspect="AspectFit" HorizontalOptions="End" IsVisible="False">
                                            <Image.GestureRecognizers>
                                                <TapGestureRecognizer Tapped="CrossIcon_Tapped" NumberOfTapsRequired="1" />
                                            </Image.GestureRecognizers>
                                        </Image>
                                    </StackLayout>
                                </yummy:PancakeView>
                                <local:ExtendedListView x:Name="lstPlaces" Margin="0,-50,0,0" HeightRequest="{Binding ListPlacesHeight}" IsVisible="{Binding IsAddressListVisible}" ItemTapped="lstPlacesItemTapped" ItemsSource="{Binding Places}" BackgroundColor="{x:Static local:Constant.LightBackGroungColor}" VerticalOptions="Fill" SeparatorVisibility="None" HasUnevenRows="true" HorizontalOptions="CenterAndExpand">
                                    <local:ExtendedListView.ItemTemplate>
                                        <DataTemplate>
                                            <ViewCell Height="40">
                                                <StackLayout Spacing="0" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                                                    <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand" Padding="10,12,10,12" VerticalOptions="CenterAndExpand" Spacing="0">
                                                        <local:ExtendedLabel FontFace="PoppinsRegular" Text="{Binding Name}" FontSize="14" VerticalOptions="Center" HorizontalOptions="Start" TextColor="{x:Static local:Constant.AddEventEntriesColor}" LineBreakMode="TailTruncation" />
                                                    </StackLayout>
                                                    <BoxView HeightRequest="1" BackgroundColor="{x:Static local:Constant.GrayBoxViewColor}"/>
                                                </StackLayout>
                                            </ViewCell>
                                        </DataTemplate>
                                    </local:ExtendedListView.ItemTemplate>
                                </local:ExtendedListView>
                                <!--EVENT DESCRIPTION-->
                            <yummy:PancakeView CornerRadius="30" Padding="7,9,5,9">
                                    <yummy:PancakeView.Border>
                                        <yummy:Border Color="Gray" Thickness="1"/>
                                    </yummy:PancakeView.Border>
                                <Grid ColumnDefinitions="20,*" Margin="20,3,7,3">
                                    <Image Grid.Column="0" Source="{x:Static local:Constant.DetailIcon}"/>
                                    <local:ExtendedEditor Grid.Column="1" FontSize="18" PlaceholderColor="{x:Static local:Constant.ExtraDarkGrayColor}" AutoSize="TextChanges"
                                                          Placeholder="+ Description" Text="{Binding Description}" Margin="10,0,10,0" HorizontalOptions="FillAndExpand"
                                                           VerticalOptions="CenterAndExpand" TextColor="#303030"/>
                                </Grid>
                                    <!--<StackLayout Orientation="Horizontal" Margin="20,3,7,3" Padding="0,0,5,0">
                                        <Image Source="{x:Static local:Constant.DetailIcon}"/>
                                            <local:ExtendedEditor FontSize="18" PlaceholderColor="{x:Static local:Constant.ExtraDarkGrayColor}" AutoSize="TextChanges"
                                                          Placeholder="+ Description" Text="{Binding Description}" Margin="10,0,10,0" HorizontalOptions="FillAndExpand"
                                                           VerticalOptions="CenterAndExpand" TextColor="#303030"/>
                                    </StackLayout>-->
                                </yummy:PancakeView>
                                <!--DATE & Time Grid-->
                                <yummy:PancakeView CornerRadius="30">
                                    <yummy:PancakeView.Padding>
                                        <OnPlatform x:TypeArguments="Thickness">
                                            <On Platform="iOS" Value="7,14,5,14" />
                                            <On Platform="Android" Value="7,8,5,8" />
                                        </OnPlatform>
                                    </yummy:PancakeView.Padding>
                                    <yummy:PancakeView.Border>
                                        <yummy:Border Color="Gray" Thickness="1"/>
                                    </yummy:PancakeView.Border>
                                    <StackLayout Style="{StaticResource eventEntryStack}" Spacing="10">
                                        <Image Source="{x:Static local:Constant.EventDateIcon}" VerticalOptions="CenterAndExpand" />
                                        <local:ExtendedLabel Text="Start Time" TextColor="{x:Static local:Constant.ExtraDarkGrayColor}" 
                                                             FontFace="PoppinsRegular" FontSize="Small" VerticalOptions="CenterAndExpand"/>
                                        <controls:NoUnderlineDatePicker Date="{Binding EventFromDate}" Margin="10,0,0,0"
                                                                            TextColor="#707070" FontSize="Small"/>
                                        <controls:NoUnderlineTimePicker Time="{Binding EventFromTime}" 
                                                                            TextColor="#707070" FontSize="Small"/>
                                    </StackLayout>
                                </yummy:PancakeView>

                                <yummy:PancakeView Style="{StaticResource eventFrameStyle}" >
                                    <yummy:PancakeView.Padding>
                                        <OnPlatform x:TypeArguments="Thickness">
                                            <On Platform="iOS" Value="7,14,5,14" />
                                            <On Platform="Android" Value="7,8,5,8" />
                                        </OnPlatform>
                                    </yummy:PancakeView.Padding>
                                    <yummy:PancakeView.Border>
                                        <yummy:Border Color="Gray" Thickness="1"/>
                                    </yummy:PancakeView.Border>
                                    <StackLayout Style="{StaticResource eventEntryStack}" Spacing="10">
                                        <Image Source="{x:Static local:Constant.EventDateIcon}" VerticalOptions="CenterAndExpand"/>
                                        <local:ExtendedLabel Text="End Time" TextColor="{x:Static local:Constant.ExtraDarkGrayColor}"
                                                             FontFace="PoppinsRegular" FontSize="Small" VerticalOptions="CenterAndExpand"/>
                                        <controls:NoUnderlineDatePicker Date="{Binding EventToDate}" TextColor="#707070" FontSize="Small" Margin="10,0,0,0"/>
                                        <controls:NoUnderlineTimePicker Time="{Binding EventToTime}" TextColor="#707070" FontSize="Small"/>
                                    </StackLayout>
                                </yummy:PancakeView>
                            <!--Next Button-->
                            <local:ExtendedButton x:Name="btnNext" Margin="0,0,0,10" FontFace="PoppinsMedium" Command="{Binding NextButtonClick}" IsVisible="{Binding IsScreenFirstVisible}"
                                              BorderRadius="23" FontAttributes="Bold" FontSize="Small" HeightRequest="45" Text="Next         >" 
                                              TextColor="{x:Static local:Constant.WhiteTextColor}"
                            VerticalOptions="EndAndExpand" HorizontalOptions="FillAndExpand" BackgroundColor="{x:Static local:Constant.PinkButtonColor}" />
                        </StackLayout>
                        </ScrollView>
                        <!--SCREEN2-->
                    <ScrollView  x:Name="Screen2" IsVisible="{Binding IsScreenSecondVisible}" VerticalScrollBarVisibility="Never">
                        <StackLayout Spacing="35" Padding="0,40,0,10">
                            <!--EVENT MOBILE-->
                            <yummy:PancakeView Style="{StaticResource eventFrameStyle}" >
                                <yummy:PancakeView.Border>
                                    <yummy:Border Color="Gray" Thickness="1"/>
                                </yummy:PancakeView.Border>
                                <StackLayout Style="{StaticResource eventEntryStack}">
                                    <Image Source="{x:Static local:Constant.MobileImage}"/>
                                    <local:BorderlessEntry Placeholder="+ Mobile Number(Optional)" FontFace="PoppinsRegular" Keyboard="Numeric" Style="{StaticResource eventEntryStyle}" Text="{Binding MobileNumber}"/>
                                </StackLayout>
                            </yummy:PancakeView >
                            <!--Unit-->
                            <yummy:PancakeView Style="{StaticResource eventFrameStyle}" >
                                <yummy:PancakeView.Border>
                                    <yummy:Border Color="Gray" Thickness="1"/>
                                </yummy:PancakeView.Border>
                                <StackLayout Style="{StaticResource eventEntryStack}">
                                    <Image Source="{x:Static local:Constant.GuestIcon}"/>
                                    <local:BorderlessEntry Placeholder="+ Unit Number(Optional)" FontFace="PoppinsRegular" Keyboard="Default" ReturnType="Done" Style="{StaticResource eventEntryStyle}" FontSize="14"/>
                                </StackLayout>
                            </yummy:PancakeView >
                            <!--Event Private-->
                            <yummy:PancakeView
                                 Style="{StaticResource eventFrameStyle}">
                                <yummy:PancakeView.Border>
                                    <yummy:Border Color="Gray" Thickness="1"/>
                                </yummy:PancakeView.Border>
                                <StackLayout Style="{StaticResource eventEntryStack}">
                                    <StackLayout HorizontalOptions="End">
                                        <Image x:Name="isPublicUncheck" Source="{x:Static local:Constant.EventUncheckImage}" Aspect="AspectFit" />
                                        <Image x:Name="isPublicCheck" Source="{x:Static local:Constant.EventCheckImage}" IsVisible="false" Aspect="AspectFit" />
                                    </StackLayout>
                                    <local:ExtendedLabel x:Name="labelpublicEvent" Margin="20,0,0,0" FontFace="PoppinsRegular" Text="Make this event Private" FontSize="14" HorizontalOptions="StartAndExpand" TextColor="{x:Static local:Constant.ExtraDarkGrayColor}" />
                                    <StackLayout.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="ImagePublic_Tapped" NumberOfTapsRequired="1" />
                                    </StackLayout.GestureRecognizers>
                                </StackLayout>
                            </yummy:PancakeView>
                            <!--EVENT TimeZone-->
                            <Frame IsVisible="False"
                                  Padding="3,3,20,3"
                                 HasShadow="False"
                                BorderColor="DarkGray"
                                CornerRadius="20">
                                <StackLayout Orientation="Horizontal" x:Name="stackTimeZone" Margin="20,0,0,0">
                                    <Image  Source="{x:Static local:Constant.TimeZoneImage}" VerticalOptions="Center" Aspect="AspectFit" />
                                    <StackLayout Margin="20,0,0,0" Spacing="0">
                                        <local:ExtendedLabel x:Name="lblsmalltimeZone" Margin="0,0,0,0" FontFace="PoppinsRegular" Text="{x:Static local:Constant.TimeZoneText}" TextColor="{x:Static local:Constant.AddEventEntriesColor}" FontSize="11" HorizontalOptions="FillAndExpand" VerticalOptions="StartAndExpand" />
                                        <local:ExtendedLabel x:Name="labelTimeZone" Margin="0,0,0,0" FontFace="PoppinsRegular" Text="PST" FontSize="14" HorizontalOptions="FillAndExpand" TextColor="{x:Static local:Constant.AddEventEntriesColor}" />
                                        <local:ExtendedPicker x:Name="timeZonePicker" TextSize="14" SelectedIndexChanged="StartTimeZone_SelectedIndexChanged" IsVisible="false" TextColor="{x:Static local:Constant.AddEventEntriesColor}">
                                        </local:ExtendedPicker>
                                    </StackLayout>
                                    <Image Source="{x:Static local:Constant.ArrowDownIcon}" HorizontalOptions="EndAndExpand" VerticalOptions="Center" Aspect="AspectFit"/>
                                    <StackLayout.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="TimeZonePicker_Tapped" NumberOfTapsRequired="1" />
                                    </StackLayout.GestureRecognizers>
                                </StackLayout>
                            </Frame>
                            <!--Add Guests-->
                            <yummy:PancakeView x:Name="gridNoGuests"
                                     Padding="3,3,5,3"
                                   Style="{StaticResource eventFrameStyle}">
                                <yummy:PancakeView.Border>
                                    <yummy:Border Color="Gray" Thickness="1"/>
                                </yummy:PancakeView.Border>
                                <Grid ColumnSpacing="0" Margin="20,4,0,4" >
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="8*" />
                                        <ColumnDefinition Width="92*" />
                                    </Grid.ColumnDefinitions>
                                    <Image Source="{x:Static local:Constant.GuestIcon}" Grid.Column="0" VerticalOptions="Center" Aspect="AspectFit" />
                                    <StackLayout Grid.Column="1" Grid.Row="0" Spacing="2" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Padding="15,2,13,2" Margin="0">
                                        <local:ExtendedLabel x:Name="lblGuestsSmall" Margin="0,0,0,-5" FontFace="PoppinsRegular" Text="{x:Static local:Constant.GuestText}" TextColor="{x:Static local:Constant.AddEventEntriesColor}" FontSize="10" HorizontalOptions="FillAndExpand" VerticalOptions="StartAndExpand" />
                                        <local:ExtendedLabel x:Name="lblGuests" Margin="0,0,0,0" FontFace="PoppinsRegular" Text="{x:Static local:Constant.AddGuestText}" FontSize="14" HorizontalOptions="FillAndExpand" TextColor="{x:Static local:Constant.PinkButtonColor}">
                                            <local:ExtendedLabel.GestureRecognizers>
                                                <TapGestureRecognizer Tapped="AddGuests_Tapped" NumberOfTapsRequired="1" />
                                            </local:ExtendedLabel.GestureRecognizers>
                                        </local:ExtendedLabel>
                                    </StackLayout>
                                </Grid>
                            </yummy:PancakeView>
                            <!--Guest List and Can add more-->
                            <StackLayout x:Name="stackguests" Margin="0,0,0,15">
                                <StackLayout Orientation="Horizontal">
                                    <local:ExtendedLabel Margin="0,0,0,0" FontFace="PoppinsRegular" Text="{x:Static local:Constant.GuestText}" TextColor="{x:Static local:Constant.AddEventEntriesColor}" FontSize="10" HorizontalOptions="FillAndExpand" VerticalOptions="Start" />
                                    <local:ExtendedLabel Margin="0,0,0,0" FontFace="PoppinsRegular" Text="{x:Static local:Constant.AddMoreText}" FontSize="12" HorizontalOptions="End" TextColor="{x:Static local:Constant.PinkButtonColor}" VerticalOptions="Start">
                                        <local:ExtendedLabel.GestureRecognizers>
                                            <TapGestureRecognizer Tapped="AddGuests_Tapped" NumberOfTapsRequired="1"/>
                                        </local:ExtendedLabel.GestureRecognizers>
                                    </local:ExtendedLabel>
                                </StackLayout>
                                <Grid x:Name="gridSelectedGuests" RowSpacing="0" ColumnSpacing="0" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="50*" />
                                        <ColumnDefinition Width="50*" />
                                    </Grid.ColumnDefinitions>
                                </Grid>
                            </StackLayout>
                           
                            <!--Add Photos/Files-->
                            <yummy:PancakeView x:Name="grdNoFiles"
                                       Padding="3,3,5,3"
                                    Style="{StaticResource eventFrameStyle}">
                                <yummy:PancakeView.Border>
                                    <yummy:Border Color="Gray" Thickness="1"/>
                                </yummy:PancakeView.Border>
                                <Grid ColumnSpacing="0" Margin="20,4,0,4">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="8*" />
                                        <ColumnDefinition Width="92*" />
                                    </Grid.ColumnDefinitions>
                                    <Image Source="{x:Static local:Constant.PhotosIcon}" Grid.Column="0" VerticalOptions="Center" Aspect="AspectFit" />
                                    <StackLayout x:Name="stackPhotos" Grid.Column="1" Grid.Row="0" Spacing="2" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Padding="15,2,13,2" Margin="0">
                                        <local:ExtendedLabel x:Name="lblPhotosSmall" Margin="0,0,0,-5" FontFace="PoppinsRegular" Text="{x:Static local:Constant.PhotosText}" TextColor="{x:Static local:Constant.AddEventEntriesColor}" FontSize="10" HorizontalOptions="FillAndExpand" VerticalOptions="StartAndExpand" />
                                        <local:ExtendedLabel x:Name="lblPhotos" Margin="0,0,0,0" FontFace="PoppinsRegular" Text="{x:Static local:Constant.AddPhotosText}" FontSize="14" HorizontalOptions="FillAndExpand" TextColor="{x:Static local:Constant.PinkButtonColor}">
                                            <local:ExtendedLabel.GestureRecognizers>
                                                <TapGestureRecognizer Tapped="AddPhotos_Tapped" NumberOfTapsRequired="1" />
                                            </local:ExtendedLabel.GestureRecognizers>
                                        </local:ExtendedLabel>
                                    </StackLayout>
                                </Grid>
                            </yummy:PancakeView>
                            <!--Selected Photos-->
                            <StackLayout x:Name="stackFiles" Margin="0,0,0,15">
                                <StackLayout Orientation="Horizontal">
                                    <local:ExtendedLabel Margin="0,0,0,0" FontFace="PoppinsRegular" Text="{x:Static local:Constant.PhotosText}" TextColor="{x:Static local:Constant.AddEventEntriesColor}" FontSize="10" HorizontalOptions="FillAndExpand" VerticalOptions="Start" />
                                    <local:ExtendedLabel Margin="0,0,0,0" FontFace="PoppinsRegular" Text="{x:Static local:Constant.AddMoreText}" FontSize="12" HorizontalOptions="End" TextColor="{x:Static local:Constant.PinkButtonColor}" VerticalOptions="Start">
                                        <local:ExtendedLabel.GestureRecognizers>
                                            <TapGestureRecognizer Tapped="AddPhotos_Tapped" NumberOfTapsRequired="1" />
                                        </local:ExtendedLabel.GestureRecognizers>
                                    </local:ExtendedLabel>
                                </StackLayout>
                                <Grid x:Name="gridSelectedPhotos" RowSpacing="0" ColumnSpacing="0" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="33*" />
                                        <ColumnDefinition Width="34*" />
                                        <ColumnDefinition Width="33*" />
                                    </Grid.ColumnDefinitions>
                                </Grid>
                            </StackLayout>
                            <!--CoverFee-->
                            <yummy:PancakeView
                                   Style="{StaticResource eventFrameStyle}">
                                <yummy:PancakeView.Border>
                                    <yummy:Border Color="Gray" Thickness="1"/>
                                </yummy:PancakeView.Border>
                                <StackLayout Style="{StaticResource eventEntryStack}">
                                    <StackLayout IsVisible="False">
                                        <Image x:Name="isCoverFeeUncheck" Source="{x:Static local:Constant.EventUncheckImage}" Aspect="AspectFit" />
                                        <Image x:Name="isCoverFeeCheck" Source="{x:Static local:Constant.EventCheckImage}" IsVisible="false" Aspect="AspectFit" />
                                    </StackLayout>
                                    <local:ExtendedLabel HorizontalOptions="StartAndExpand" VerticalOptions="CenterAndExpand" FontFace="PoppinsRegular" Text="$" FontSize="18" TextColor="{x:Static local:Constant.ExtraDarkGrayColor}" />
                                    <local:ExtendedLabel x:Name="labelCoverFee" Margin="10,0,0,0" VerticalOptions="CenterAndExpand" HorizontalOptions="FillAndExpand" FontFace="PoppinsRegular" Text="Charge Cover Fee/Offer Bottle Service" FontSize="14" TextColor="{x:Static local:Constant.ExtraDarkGrayColor}" />
                                    <Image Source="{x:Static local:Constant.ArrowDownIcon}" HorizontalOptions="EndAndExpand" Margin="0,0,10,0" Aspect="AspectFit" />
                                    <StackLayout.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="ImageCoverFee_Tapped" NumberOfTapsRequired="1" />
                                    </StackLayout.GestureRecognizers>
                                </StackLayout>
                            </yummy:PancakeView>
                            <Grid ColumnSpacing="0" x:Name="gridCoverFee" IsVisible="false" RowSpacing="5" Margin="0,-10,0,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <StackLayout Grid.Column="0" Grid.Row="0" Spacing="0" HorizontalOptions="FillAndExpand" VerticalOptions="Fill" Padding="0,0,0,0" Margin="0">
                                    <local:ExtendedLabel x:Name="lblSmallCoverFee" Text="Cover fee" FontFace="PoppinsRegular" TextColor="{x:Static local:Constant.AddEventEntriesColor}" Margin="0,0,0,0" FontSize="11" HorizontalOptions="FillAndExpand" VerticalOptions="Fill" />
                                    <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand" Spacing="0" VerticalOptions="Fill" Padding="0" Margin="0,0,0,0">
                                        <local:ExtendedLabel Margin="0,0,0,0" FontFace="PoppinsRegular" Text="$" FontSize="14" HorizontalOptions="Start" TextColor="{x:Static local:Constant.AddEventEntriesColor}" VerticalOptions="Center" />
                                        <local:ExtendedEntry FontFace="PoppinsRegular" MaxLength="5" Text="{Binding CoverAmount}" Keyboard="Numeric" PlaceholderTextColor="{x:Static local:Constant.GrayTextColor}" TextColor="{x:Static local:Constant.ExtraDarkGrayColor}" FontSize="14" HorizontalOptions="FillAndExpand" />
                                    </StackLayout>
                                    <BoxView  Margin="0,0,0,0" Grid.Column="0" HorizontalOptions="FillAndExpand" HeightRequest="1" BackgroundColor="{x:Static local:Constant.GrayBoxViewColor}">
                                    </BoxView>
                                </StackLayout>
                              
                                <StackLayout x:Name="gridBottleFee" Grid.Column="0" Grid.Row="1" Spacing="0" HorizontalOptions="FillAndExpand" VerticalOptions="Fill" Padding="0,0,0,0" Margin="0">
                                    <local:ExtendedLabel x:Name="lblSmallBottleFee" Text="Per Bottle fee" FontFace="PoppinsRegular" TextColor="{x:Static local:Constant.AddEventEntriesColor}" Margin="0,0,0,0" FontSize="11" HorizontalOptions="FillAndExpand" VerticalOptions="Fill" />
                                    <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand" Spacing="0" VerticalOptions="Fill" Padding="0" Margin="0,0,0,0">
                                        <local:ExtendedLabel Margin="0,0,0,0" FontFace="PoppinsRegular" Text="$" FontSize="14" HorizontalOptions="Start" TextColor="{x:Static local:Constant.AddEventEntriesColor}" VerticalOptions="Center" />
                                        <local:ExtendedEntry FontFace="PoppinsRegular" MaxLength="5" Keyboard="Numeric" Text="{Binding BottleAmount}" PlaceholderTextColor="{x:Static local:Constant.GrayTextColor}" TextColor="{x:Static local:Constant.GrayTextColor}" FontSize="14" HorizontalOptions="FillAndExpand" />
                                    </StackLayout>
                                    <BoxView Margin="0,0,0,0" Grid.Column="0" HorizontalOptions="FillAndExpand" HeightRequest="1" BackgroundColor="{x:Static local:Constant.GrayBoxViewColor}"/>
                                </StackLayout>
                            </Grid>

                            <!--Bottle Fee-->
                            <yummy:PancakeView IsVisible="False"
                                 Style="{StaticResource eventFrameStyle}">
                                <yummy:PancakeView.Border>
                                    <yummy:Border Color="Gray" Thickness="1"/>
                                </yummy:PancakeView.Border>
                                <StackLayout Style="{StaticResource eventEntryStack}">
                                    <StackLayout HorizontalOptions="End">
                                        <Image x:Name="isBottleFeeUncheck" Source="{x:Static local:Constant.EventUncheckImage}" Aspect="AspectFit" />
                                        <Image x:Name="isBottleFeeCheck" Source="{x:Static local:Constant.EventCheckImage}" IsVisible="false" Aspect="AspectFit" />
                                    </StackLayout>
                                    <local:ExtendedLabel x:Name="labelbottleService" Margin="20,0,0,0" FontFace="PoppinsRegular" Text="Offer Bottle Service" FontSize="14" HorizontalOptions="StartAndExpand" TextColor="{x:Static local:Constant.ExtraDarkGrayColor}" />
                                    <StackLayout.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="ImageBottleFee_Tapped" NumberOfTapsRequired="1" />
                                    </StackLayout.GestureRecognizers>
                                </StackLayout>
                            </yummy:PancakeView>
                            <StackLayout x:Name="stackMore" IsVisible="false">
                                <StackLayout Spacing="0" x:Name="lblBoostcharges" IsVisible="false" HorizontalOptions="FillAndExpand" VerticalOptions="Fill" Padding="0,0,0,0" Margin="0">
                                    <local:ExtendedLabel Text="Pay $5 to boost your event" FontFace="PoppinsRegular" TextColor="{x:Static local:Constant.AddEventEntriesColor}" Margin="0,0,0,0" FontSize="11" HorizontalOptions="FillAndExpand" VerticalOptions="Fill" />
                                </StackLayout>
                            </StackLayout>
                            <!--Second ScreenButtons-->
                            <Grid ColumnDefinitions="*,*" VerticalOptions="EndAndExpand" Margin="0,0,0,10" IsVisible="{Binding IsScreenSecondVisible}">
                                <local:ExtendedButton Grid.Column="0" FontFace="PoppinsMedium" Command="{Binding PreviousButtonClick}"  BorderRadius="23"
                                                      FontAttributes="Bold" FontSize="Small" HeightRequest="45" 
                                                      Text="{x:Static local:Constant.PreviousButtonText}" TextColor="{x:Static local:Constant.WhiteTextColor}"
                            VerticalOptions="Fill" HorizontalOptions="FillAndExpand" BackgroundColor="{x:Static local:Constant.PinkButtonColor}" />
                                <local:ExtendedButton Grid.Column="1" FontFace="PoppinsMedium" Command="{Binding CreateEventClick}" BorderRadius="23" FontAttributes="Bold"
