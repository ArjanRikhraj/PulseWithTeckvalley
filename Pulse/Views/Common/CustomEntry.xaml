                   </OnPlatform>
              </local:ExtendedEntry.Margin>-->
                </local:ExtendedEntry>
			</StackLayout>
			<BoxView Grid.Row="1" x:Name="box" Margin="15,15,0,0" Grid.Column="1" HeightRequest="1" BackgroundColor="{x:Static local:Constant.GrayBoxViewColor}">
